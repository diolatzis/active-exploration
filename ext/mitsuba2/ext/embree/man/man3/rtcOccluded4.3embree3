.SS SYNOPSIS
.IP
.nf
\f[C]
#include\ <embree3/rtcore.h>

void\ rtcOccluded4(
\ \ const\ int*\ valid,
\ \ RTCScene\ scene,
\ \ struct\ RTCIntersectContext*\ context,
\ \ struct\ RTCRay4*\ ray
);

void\ rtcOccluded8(
\ \ const\ int*\ valid,
\ \ RTCScene\ scene,
